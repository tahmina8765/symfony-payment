{% extends 'base.html.twig' %}

{% block body %}
    <h1>Invoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Invoiceid</th>
                <td>{{ invoice.invoiceId }}</td>
            </tr>
            <tr>
                <th>Countrycode</th>
                <td>{{ invoice.countryCode }}</td>
            </tr>
            <tr>
                <th>Gateway</th>
                <td>{{ invoice.gateway }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ invoice.amount }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ invoice.currency }}</td>
            </tr>
            <tr>
                <th>Servicename</th>
                <td>{{ invoice.serviceName }}</td>
            </tr>
            <tr>
                <th>Servicedescription</th>
                <td>{{ invoice.serviceDescription }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ invoice.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ invoice.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ invoice.phone }}</td>
            </tr>
            <tr>
                <th>Ipnurl</th>
                <td>{{ invoice.ipnUrl }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invoice.status }}</td>
            </tr>
            <tr>
                <th>Appname</th>
                <td>{{ invoice.appName }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if invoice.created %}{{ invoice.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('invoice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('invoice_delete', { 'id': invoice.id }) }}">Delete</a>
        </li>
    </ul>
{% endblock %}
